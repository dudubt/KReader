<?xml version="1.0" encoding="utf-8"?>
<com.koolearn.android.kooreader.NavigationWindow
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:background="#eeeeee"
    android:focusable="false"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/navigation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="6dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingTop="3dp"
        android:paddingRight="10dp"
        android:paddingBottom="3dp"
        android:singleLine="true"
        android:text="32% dsfdsfcbcisdycs"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/pre_character"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:gravity="center"
            android:text="上一章"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/navigation_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp" />

        <TextView
            android:id="@+id/next_character"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="12dp"
            android:gravity="center"
            android:textSize="16sp"
            android:text="下一章"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:background="#A1aaaaaa">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/navigation_toc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableTop="@drawable/toc"
            android:drawablePadding="6dp"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:paddingRight="25dp"
            android:paddingBottom="15dp"
            android:text="目录"
            android:gravity="center"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/navigation_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawableTop="@drawable/dark"
            android:drawablePadding="6dp"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:paddingRight="25dp"
            android:paddingBottom="15dp"
            android:text="夜间"
            android:gravity="center"
            android:textSize="16sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/navigation_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawableTop="@drawable/lights"
            android:drawablePadding="6dp"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:paddingRight="25dp"
            android:paddingBottom="15dp"
            android:text="日间"
            android:visibility="invisible"
            android:gravity="center"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/navigation_fonts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableTop="@drawable/fonts"
            android:drawablePadding="6dp"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:paddingRight="25dp"
            android:paddingBottom="15dp"
            android:text="设置"
            android:gravity="center"
            android:textSize="16sp"
            />
    </RelativeLayout>
</com.koolearn.android.kooreader.NavigationWindow>
